<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
  integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
  .navbar-brand {
    font-family: 'Glegoo', serif;
  }

  .NavSeller {
    width: 70px;
    width: 100%;
    background: #ea895f;
    color: #333;
  }

  .submit-btn {
    background: #ea895f;
    border: none;
    padding: 10px 15px;
    margin-right: 30px;
    color: #fff;
  }

  .text-dark {
    border: none;
    background: #ea895f;
    font-size: 20px;
    font-weight: 600;
  }

  .dropbtn {
    padding: 5px 10px;
    background: #fff;
    color: #333;
    transition: all .25s;
  }

  .dropbtn:hover {
    background: #ea895f;
    color: #333;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/seller/sellerHome" style="color: #ea895f;font-size:28px">BuyIt
      <span style="color: #333;">{{user.userName}}</span> </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class=" d-flex justify-content-end" style="margin-bottom: 0;">


      </ul>
    </div>
    <div class="d-flex justify-content-end">
      <div class="row g-3 align-items-center me-5">
        <div class="col">
          <form action="/users/search" method="post" style="display:flex">
            <input type="text"
              style="width: 500px;background-color: rgb(255, 219, 219);color:rgb(39, 39, 39);border:none" name="search"
              id="inputPassword6" placeholder="Search for products" class="form-control"
              aria-describedby="passwordHelpInline" required>
            <button type="submit" style="background-color: rgb(255, 219, 219);color:rgb(255, 65, 65);border:none"><i
                class="fa-solid fa-search"></i></button>
          </form>
        </div>
      </div>
      <div class="dropdown">

        {{#if user}}
        <button
          style="background-color: rgb(255, 219, 219);color:rgb(255, 65, 65);border:none;border-radius:5px;padding:7px;margin-right:30px"><i
            class='fa-solid fa-user'></i></button>
        <div class="dropdown-content me-3">
          <a href="/users/logout">Logout</a>
        </div>
        {{/if}}
      </div>
    </div>
</nav>
<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Brand</a>
